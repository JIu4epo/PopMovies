<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/action_bar</item>
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="MainActivity" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.PopMovies.NoLogo</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">

    </style>
    <style name="ActionBar.Solid.PopMovies.NoLogo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|showTitle</item>
        <item name="logo">@mipmap/ic_launcher</item>
    </style>
</resources>
